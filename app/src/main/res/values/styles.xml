<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="KeyboardKeyButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="KbKey">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">30dp</item> <!-- thấp hơn để nhỏ -->
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">9sp</item> <!-- nhỏ hơn nữa -->
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:background">@drawable/background_kb_button</item>
    </style>
</resources>
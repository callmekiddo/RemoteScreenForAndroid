<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <Button
        style="@style/KeyboardKeyButton"
        android:text="~\n`"
        android:id="@+id/key_backtick" />

    <Button
        style="@style/KeyboardKeyButton"
        android:text="!\n1"
        android:id="@+id/key_1" />

    <Button
        style="@style/KeyboardKeyButton"
        android:text="\@\n2"
        android:id="@+id/key_2" />

    <Button
        style="@style/KeyboardKeyButton"
        android:text="#\n3"
        android:id="@+id/key_3" />

    <Button
        style="@style/KeyboardKeyButton"
        android:text="$\n4"
        android:id="@+id/key_4" />

    <Button
        style="@style/KeyboardKeyButton"
        android:text="%\n5"
        android:id="@+id/key_5" />

    <Button
        style="@style/KeyboardKeyButton"
        android:text="^\n6"
        android:id="@+id/key_6" />

    <Button
        style="@style/KeyboardKeyButton"
        android:text="&amp;\n7"
        android:id="@+id/key_7" />

    <Button
        style="@style/KeyboardKeyButton"
        android:text="*\n8"
        android:id="@+id/key_8" />

    <Button
        style="@style/KeyboardKeyButton"
        android:text="(\n9"
        android:id="@+id/key_9" />

    <Button
        style="@style/KeyboardKeyButton"
        android:text=")\n0"
        android:id="@+id/key_0" />

    <Button
        style="@style/KeyboardKeyButton"
        android:text="_\n-"
        android:id="@+id/key_hyphen" />

    <Button
        style="@style/KeyboardKeyButton"
        android:text="+\n="
        android:id="@+id/key_equal" />

    <Button
        style="@style/KeyboardKeyButton"
        android:text="Backspace"
        android:id="@+id/key_backspace" />
</LinearLayout>